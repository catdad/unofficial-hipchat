{
    "manifest_version": 2,
    "name": "Unofficial HipChat",
    "short_name": "HipChat",
    "description": "A hipper HipChat client.",
    "minimum_chrome_version": "42.0.0.0",
    "version": "1.0.0",
    "icons": {
        "16": "assets/16.png",
        "32": "assets/32.png",
        "128": "assets/128.png",
        "256": "assets/256.png"
    },
    "app": {
        "background": {
            "scripts": ["main.js"]
        }
    },
    "permissions": [
        "audioCapture",
        "desktopCapture",
        "videoCapture",
        "background",
        "clipboardWrite",
        "idle",
        "notifications",
        "storage",
        "unlimitedStorage",
        "webview",
        "https://www.google-analytics.com/"
    ],
    "commands": {
        "new-team-login": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "New team login"
        },
        "reload": {
            "suggested_key": {
                "default": "Ctrl+R"
            },
            "description": "Reload webview"
        }
    }
}
